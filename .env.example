# ===========================================
# NLP Code Generator - Environment Variables
# ===========================================
# Copy this file to .env and update with your values
# IMPORTANT: Never commit .env to version control!

# ===========================================
# Database Configuration
# ===========================================
POSTGRES_DB=nlpgen
POSTGRES_USER=nlpuser
POSTGRES_PASSWORD=change-this-secure-password

# ===========================================
# MinIO Object Storage Configuration
# ===========================================
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123

# ===========================================
# Backend Security Configuration
# ===========================================
# Generate a secure random string (64+ characters recommended)
# Example: openssl rand -hex 32
JWT_SECRET=change-this-to-a-long-random-string-min-64-chars

# ===========================================
# Default Admin User (First-time Setup)
# ===========================================
# These credentials are used to create the initial admin account
# CHANGE THESE IMMEDIATELY AFTER FIRST LOGIN!
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=admin123

# ===========================================
# LLM API Configuration
# ===========================================
# Get your API key from: https://platform.openai.com/api-keys
LLM_API_KEY=sk-your-openai-api-key-here
LLM_API_URL=https://api.openai.com/v1

# Optional: Use local Ollama instead of OpenAI
# Uncomment these lines and comment out the OpenAI config above
# LLM_API_URL=http://host.docker.internal:11434/v1
# LLM_API_KEY=ollama

# Optional: Use other OpenAI-compatible APIs
# LLM_API_URL=https://api.anthropic.com/v1
# LLM_API_KEY=your-anthropic-api-key

# ===========================================
# Qdrant Vector Database Configuration
# ===========================================
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=

# ===========================================
# Redis Cache Configuration
# ===========================================
REDIS_URL=redis://redis:6379

# ===========================================
# Embedding Model Configuration
# ===========================================
# OpenAI embedding models:
# - text-embedding-3-small (1536 dimensions, faster, cheaper)
# - text-embedding-3-large (3072 dimensions, more accurate)
# - text-embedding-ada-002 (1536 dimensions, legacy)
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# ===========================================
# Optional: Advanced Configuration
# ===========================================
# Uncomment and modify as needed

# Node Environment
# NODE_ENV=production

# Backend Port
# PORT=3000

# Database Pool Settings
# DB_POOL_MAX=20
# DB_IDLE_TIMEOUT=30000
# DB_CONNECTION_TIMEOUT=2000

# LLM Request Timeout (milliseconds)
# LLM_TIMEOUT=30000

# Max File Upload Size (bytes)
# MAX_FILE_SIZE=52428800

# Log Level (error, warn, info, debug)
# LOG_LEVEL=info
